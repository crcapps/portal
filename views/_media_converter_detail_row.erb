<h4>Media Converter Info</h4>
<table class="uk-table uk-table-condensed rg-tiny">
  <tr>
    <th> Name </th>
    <td>
      <%= form_tag 'update_media_converter', :class => 'uk-form' do %>
        <%= fields_for media_converter do |f| %>
          <%= f.hidden_field :id %>
          <%= f.text_field :name, :class => 'uk-width-1-2' %>
          <%= submit_tag 'Save', :class => 'uk-button rg-button rg-button-inline small-min-width', :data => {:disable_with => 'Save' } %>
        <% end %>
      <% end %>
    </td>
  </tr>
  <tr>
    <th> MAC address </th>
    <td><%= media_converter.mac %></td>
  </tr>
  <tr>
    <th> Device Vendor </th>
    <td> <%= media_converter.vendor %> </td>
  </tr>
  <% if media_converter.uptime.to_i > 0 %>
    <tr>
      <th> Uptime </th>
      <td> <%= distance_of_time(media_converter.uptime, highest_measures: 2) %> </td>
    </tr>
  <% end %>
  <% if media_converter.hostname %>
    <tr>
      <th> Hostname </th>
      <td> <%= media_converter.hostname %> </td>
    </tr>
  <% end %>
  <% if media_converter.vendor %>
    <tr>
      <th> Device Vendor </th>
      <td> <%= media_converter.vendor %> </td>
    </tr>
  <% end %>
  <% if @current_account && @current_account.lock_devices == false %>
    <tr>
      <td colspan="2" class="action-cell">
        <%= link_to('Delete', {:action => :delete_media_converter, :media_converter_id => media_converter.id}, {:class => 'd-block mx-auto col-6 btn btn-light shadow-sm btn-lg', :data => { :disable_with => 'Please wait...' } }) %>
      </td>
    </tr>
  <% end %>
</table>
