<div class="col-12">
  <div class="row">
    <div class="col-12">
      <h4>Media Converter Info</h4>
    </div>
  </div>
  <div class="row">
    <table class="table">
      <tr>
        <th> Name </th>
        <td>
          <%= form_tag 'update_media_converter', :class => 'container-fluid' do %>
            <%= fields_for media_converter do |f| %>
              <%= f.hidden_field :id %>
              <div class="form-row">
                <div class="form-group col-12">
                  <%= f.text_field :name, :class => 'form-control form-control-lg col-6' %>
                  <%= button_tag 'Save', :class => 'btn btn-lg btn-primary col-6', :data => {:disable_with => 'Save' } %>
                </div>
              </div>
            <% end %>
          <% end %>
        </td>
      </tr>
      <tr>
        <th> MAC address </th>
        <td><%= media_converter.mac %></td>
      </tr>
      <tr>
        <th> Device Vendor </th>
        <td> <%= media_converter.vendor %> </td>
      </tr>
      <% if media_converter.uptime.to_i > 0 %>
        <tr>
          <th> Uptime </th>
          <td> <%= distance_of_time(media_converter.uptime, highest_measures: 2) %> </td>
        </tr>
      <% end %>
      <% if media_converter.hostname %>
        <tr>
          <th> Hostname </th>
          <td> <%= media_converter.hostname %> </td>
        </tr>
      <% end %>
      <% if media_converter.vendor %>
        <tr>
          <th> Device Vendor </th>
          <td> <%= media_converter.vendor %> </td>
        </tr>
      <% end %>
      <% if @current_account && @current_account.lock_devices == false %>
        <tr>
          <td colspan="2" class="action-cell">
            <%= link_to('Delete', {:action => :delete_media_converter, :media_converter_id => media_converter.id}, {:class => 'd-block mx-auto col-6 form-control form-control-lg', :data => { :disable_with => '<span class="spinner-border spinner-border-sm align-middle" role="status" aria-hidden="true"></span> Please wait...'.html_safe } }) %>
          </td>
        </tr>
      <% end %>
    </table>
  </div>
</div>
