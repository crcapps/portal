<div class="col-12 col-lg-6 mx-auto session-info">
  <div class="col-12">
    <div class="row">
      <div class="col-12">
        <%= link_to( {:action => :manage_devices} ) do %>
          <%= portal_image_tag 'profile_icon.svg', :class => 'mx-auto d-block w-25' %>
        <% end %>
      </div>
      <div class="col-12">
        <h3 class="text-primary text-center">Profile</h3>
      </div>
    </div>
    <div class="col-12">
      <p class="text-center">
        <strong>Login:</strong>
        <span><%= @current_account_or_token.login %></span>
      </p>
      <p class="text-center">
        <strong>Name:</strong>
        <span><%= @current_account_or_token.full_name %></span>
      </p>
      <% unless @current_account_or_token.full_address.empty? %>
        <p class="text-center">
          <strong>Address:</strong>
          <span><%= @current_account_or_token.full_address %></span>
        </p>
      <% end %>
      <% if @account.secret_answers.empty? %>
        <p class="text-center">
          <strong>Warning:</strong> Your account does not have a password recovery question/answer defined.
        </p>
      <% end %>
    </div>
    <div class="col-12">
      <%= link_to 'Manage Profile', {:action => :account_info}, {:class => 'd-block mx-auto col-6 text-center', :data => { :disable_with => 'Please wait...' } } %>
    </div>
  </div>
</div>
<hr class="col-9 col-lg-4 mx-auto border-dark d-lg-none separator">
