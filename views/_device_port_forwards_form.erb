<%= form_tag({:action => ( pf.persisted? ? :update_device_port_forward : :add_device_port_forward)}, {:class => 'container-fluid'}) do %>
  <%= fields_for pf do |f| %>
    <%= f.hidden_field :id, {:id => nil} %>
    <% unless pf.errors.empty? %>
      <div class="form-row">
        <div class="form-group col-12">
          <%= error_messages_for :port_forward %>
        </div>
      </div>
    <% end %>
    <fieldset class="container-fluid">
      <div class="form-row">
        <legend class="col-12 text-center">Port Forward</legend>
      </div>
      <div class="form-row">
        <div class="form-group col-12">
          <%= f.label :name, "Name (Optional)", :class => 'sr-only' %>
          <%= f.text_field :name, :placeholder => 'Name (Optional)', :class => 'col-12 p-2', :id => nil  %>
        </div>
      </div>
      <div class="form-row">
        <div class="form-group col-12">
          <%= f.label :external_ports, "External Port(s)", :class => 'sr-only' %>
          <%= f.text_field :external_ports, :placeholder => 'External Port(s)', :class => 'col-12 p-2', :id => nil  %>
        </div>
      </div>
      <div class="form-row">
        <div class="form-group col-12">
          <%= f.label :internal_ports, "Internal Ports (Optional)", :class => 'sr-only' %>
          <%= f.text_field :internal_ports, :placeholder => 'Internal Ports(Optional)', :class => 'col-12 p-2', :id => nil  %>
        </div>
      </div>
      <div class="form-row">
        <div class="form-group col-12">
          <%= f.label :name, "Protocol", :class => 'font-weight-bold' %>
          <%= f.collection_select :protocol, NetApp::PORT_PROTOCOLS, :to_s, :to_s, {}, {:class => 'col-12 p-2 btn btn-light shadow-sm', :id => nil, :placeholder => 'Protocol', :class => "col-12 p-2 btn btn-light btn-lg shadow-sm" }  %>
        </div>
      </div>
      <div class="form-row">
        <div class="form-group col-12">
          <%= f.label :device_id, "Device", :class => 'font-weight-bold' %>
          <%= f.collection_select :device_id, @current_account_or_token.devices.portal_visible, :id, :name, {include_blank: 'Disabled'}, {:class => 'col-12 p-2 btn btn-light shadow-sm', :id => nil} %>
        </div>
      </div>
      <div class="form-row">
        <% if pf.persisted? %>
          <div class="form-group col-12">
            <%= button_tag 'Update', :class => 'col-12 btn btn-primary btn-lg', :data => {:disable_with => '<span class="spinner-border spinner-border-sm align-middle" role="status" aria-hidden="true"></span> Updating'.html_safe } %>
          </div>
          <div class="form-group col-12">
            <%= button_tag 'Delete', :class => 'col-12 btn btn-danger btn-lg', :data => {:confirm => 'Are you sure you want to delete this port forward?', :disable_with => '<span class="spinner-border spinner-border-sm align-middle" role="status" aria-hidden="true"></span>Deleting'.html_safe } %>
          </div>
        <% else %>
          <div class="form-group col-12">
            <%= button_tag 'Add' , :class => 'col-12 btn btn-primary btn-lg' %>
          </div>
        <% end %>
    </div>
  </fieldset>
<% end %>
<% end %>
<hr>
