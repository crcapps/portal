/* Sticky footer styles
-------------------------------------------------- */
html {
  min-height: 100%;
}

.footer {
  position: absolute;
  bottom: 0;
  width: 100%;
  height: 32px; /* Set the fixed height of the footer here */
}

.footer img {
  width: 51px;
}

.footer span.text-muted {
  font-size: 0.5rem;
}

