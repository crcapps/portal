/* BOOTSTRAP OVERRIDES */
:root {
--primary: #29ABE2;
--secondary: #626366;
--light: #F4F4F4;
}
body {
color: var(--textColor) !important;
font-family: 'Arial', sans-serif !important;
  overflow-x: hidden;
}
input {
box-shadow: 0px 3px 6px var(--dropShadow);
border-radius: 5px;
border: none;
font-size: 1.25rem;
}
::placeholder {
opacity: 50%;
}
.alert {
  margin-bottom: 0;
}
.bg-primary {
background-color: var(--primary) !important;
}
.btn-light {
background: var(--white) !important;
color: var(--textColor) !important;
}
.btn-primary {
background-color: var(--primary) !important;
border-color: var(--primary) !important;
}

.progress {
    background-color: #c1c4c7;
}
.progress-bar {
  overflow:visible;

}
.shadow-sm {
box-shadow: 0px 3px 6px var(--dropShadow) !important;
}
.navbar-toggler {
right: 0.25em;
border: none !important;
}
.navbar-toggler-icon {
background-image: url("data:image/svg+xml;charset=utf8,%3Csvg viewBox='0 0 32 32' xmlns='http://www.w3.org/2000/svg'%3E%3Cpath stroke='rgb(41, 171, 226)' stroke-width='5' stroke-linecap='round' stroke-miterlimit='10' d='M4 8h24M4 16h24M4 24h24'/%3E%3C/svg%3E") !important;
}

.navbar-light .navbar-nav .active>.nav-link, .navbar-light .navbar-nav .nav-link.active, .navbar-light .navbar-nav .nav-link.show, .navbar-light .navbar-nav .show>.nav-link {
color: var(--secondary);
}
.text-primary {
color: var(--primary) !important;
}
.button-primary {
background-color: var(--primary) !important;
}
/* END BOOTSTRAP OVERRIDES */
